{
  // =========================================================================
  // General Appearance & Workbench
  // =========================================================================
  "workbench.colorTheme": "Default Dark Modern",
  "workbench.colorCustomizations": {
    "debugConsole.infoForeground": "#00FF00", // Info messages
    "debugConsole.warningForeground": "#FFA500", // Warning messages
    "debugConsole.errorForeground": "#FF0000", // Error messages
    "debugConsole.sourceForeground": "#00BFFF" // Source messages
  },
  // -------------------------------------------------------------------------
  // Trust & Security
  // -------------------------------------------------------------------------
  "security.workspace.trust.untrustedFiles": "open",
  // -------------------------------------------------------------------------
  // Explorer & Files
  // -------------------------------------------------------------------------
  "explorer.confirmDragAndDrop": false,
  "files.exclude": {
    "**/__pycache__": true,
    // "**/*.class": true,
    "**/*.LCK*": true,
    "**/*~": true
    // Node / TS / Next
    // "**/eslint.config.mjs": true,
    // "**/jest.config.js": true,
    // "**/jest.setup.js": true,
    // "**/next-env.d.ts": true,
    // "**/next.config.ts": true,
    // "**/package-lock.json": true,
    // "**/postcss.config.mjs": true,
    // "**/tsconfig.json": true,
    // "**/tsconfig.tsbuildinfo": true,
    // "**/.swc": true
  },
  // -------------------------------------------------------------------------
  // Diff Editor & Large Files
  // -------------------------------------------------------------------------
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.largeFileOptimizations": false,
  // -------------------------------------------------------------------------
  // Settings Sync & Telemetry
  // -------------------------------------------------------------------------
  "settingsSync.ignoredSettings": [],
  "redhat.telemetry.enabled": true,
  // =========================================================================
  // Git & Source Control
  // =========================================================================
  "git.autofetch": true,
  // =========================================================================
  // Terminal
  // =========================================================================
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.defaultProfile.windows": "Command Prompt",
  "terminal.external.osxExec": "Ghostty.app",
  "terminal.external.windowsExec": "\"C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell.exe\"",
  // =========================================================================
  // Editor – Core Behaviour
  // =========================================================================
  "editor.insertSpaces": false,
  "editor.tabCompletion": "on",
  "editor.fontLigatures": false,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.cursorBlinking": "solid",
  // -------------------------------------------------------------------------
  // Editor – Formatting & Code Actions
  // -------------------------------------------------------------------------
  "editor.formatOnSave": true,
  // "editor.defaultFormatter": null,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },
  // -------------------------------------------------------------------------
  // Editor – Minimap & View
  // -------------------------------------------------------------------------
  "editor.minimap.renderCharacters": false,
  "editor.minimap.showSlider": "always",
  // -------------------------------------------------------------------------
  // Diagnostics & Error Lens
  // -------------------------------------------------------------------------
  "errorLens.followCursor": "allLinesExceptActive",
  // =========================================================================
  // Python
  // =========================================================================
  "python.analysis.typeCheckingMode": "basic",
  "python.REPL.enableREPLSmartSend": false,
  "python.defaultInterpreterPath": "/Users/andersbekkevard/.globalpy",
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.insertSpaces": true,
    "editor.tabSize": 4
  },
  // Tring to fix the parenthesis insertion
  "editor.acceptSuggestionOnEnter": "on",
  "editor.acceptSuggestionOnCommitCharacter": true,
  "python.analysis.autoImportCompletions": true,
  "python.analysis.completeFunctionParens": true,
  "editor.suggest.insertMode": "replace",
  // End trying to fix
  // =========================================================================
  // JavaScript / TypeScript
  // =========================================================================
  "javascript.suggest.completeFunctionCalls": true,
  "typescript.suggest.completeFunctionCalls": true,
  "typescript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.inlayHints.parameterNames.enabled": "none",
  "typescript.inlayHints.variableTypes.enabled": false,
  "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // =========================================================================
  // Java
  // =========================================================================
  "java.inlayHints.parameterNames.enabled": "none",
  "java.edit.smartSemicolonDetection.enabled": true,
  "java.completion.favoriteStaticMembers": [
    "org.junit.Assert.*",
    "org.junit.Assume.*",
    "org.junit.jupiter.api.Assertions.*",
    "org.junit.jupiter.api.Assumptions.*",
    "org.junit.jupiter.api.DynamicContainer.*",
    "org.junit.jupiter.api.DynamicTest.*",
    "org.mockito.Mockito.*",
    "org.mockito.ArgumentMatchers.*",
    "org.mockito.Answers.*"
  ],
  "[java]": {
    "editor.defaultFormatter": "redhat.java"
  },
  "java.format.settings.profile": "GoogleStyle",
  // =========================================================================
  // Rust
  // =========================================================================
  "rust-analyzer.inlayHints.typeHints.enable": false,
  "rust-analyzer.inlayHints.parameterHints.enable": true,
  "rust-analyzer.inlayHints.chainingHints.enable": false,
  // =========================================================================
  // Notebook
  // =========================================================================
  "notebook.defaultFormatter": "ms-python.black-formatter",
  // =========================================================================
  // Markdown & Mermaid
  // =========================================================================
  "markdown-mermaid.darkModeTheme": "base",
  "markdown-mermaid.lightModeTheme": "base",
  // =========================================================================
  // Extensions – Better Comments
  // =========================================================================
  "better-comments.highlightPlainText": true,
  "better-comments.tags": [
    {
      "tag": "!",
      "color": "#FF2D00",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "?",
      "color": "#3498DB",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "//",
      "color": "#474747",
      "strikethrough": true,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "todo",
      "color": "#FF8C00",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "*",
      "color": "#98C379",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    }
  ],
  // -------------------------------------------------------------------------
  // Extensions – Comment Divider
  // -------------------------------------------------------------------------
  "comment-divider.lineFiller": "=",
  "comment-divider.mainHeaderFiller": "=",
  "comment-divider.subheaderFiller": "=",
  "comment-divider.languagesMap": {},
  // -------------------------------------------------------------------------
  // Extensions – CodeSnap
  // -------------------------------------------------------------------------
  "codesnap.target": "window",
  "codesnap.showWindowControls": false,
  "codesnap.showLineNumbers": false,
  // -------------------------------------------------------------------------
  // Extensions – Cursor++
  // -------------------------------------------------------------------------
  "cursor.cpp.disabledLanguages": [
    "plaintext",
    "markdown",
    "scminput"
  ],
  "cursorpyright.analysis.autoImportCompletions": true,
  "cursor.cpp.enablePartialAccepts": true,
  "cursorpyright.analysis.completeFunctionParens": true,
  "cursorpyright.analysis.typeCheckingMode": "standard", // "off", "basic", "standard", "strict", "recommended", "all"
  "cursorpyright.analysis.diagnosticSeverityOverrides": {},
  // -------------------------------------------------------------------------
  // Extensions – GitHub Copilot
  // -------------------------------------------------------------------------
  "github.copilot.editor.enableAutoCompletions": false,
  "github.copilot.selectedCompletionModel": "",
  "github.copilot.enable": {
    "*": false,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },
  // -------------------------------------------------------------------------
  // Extensions – LaTeX Workshop
  // -------------------------------------------------------------------------
  "latex-workshop.latex.tools": [
    {
      "name": "pdflatex",
      "command": "pdflatex",
      "args": [
        // "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "%DOC%"
      ]
    },
    {
      "name": "bibtex",
      "command": "bibtex",
      "args": [
        "%DOCFILE%"
      ]
    }
  ],
  "latex-workshop.latex.recipes": [
    {
      "name": "pdflatex",
      "tools": [
        "pdflatex"
      ]
    },
    {
      "name": "pdflatex → bibtex → pdflatex × 2",
      "tools": [
        "pdflatex",
        "bibtex",
        "pdflatex",
        "pdflatex"
      ]
    }
  ],
  "latex-workshop.latex.autoClean.run": "onBuilt",
  "latex-workshop.latex.clean.fileTypes": [
    "*.aux",
    "*.bbl",
    "*.blg",
    "*.fdb_latexmk",
    "*.fls",
    "*.log",
    "*.out",
    "*.synctex.gz",
    "*.toc",
    "*.bcf",
    "*.run.xml"
  ],
  "latex-workshop.latex.recipe.default": "pdflatex",
  "latex-workshop.latex.useRecipe": true,
  "latex-workshop.latex.autoBuild.run": "onSave", // optional
  // -------------------------------------------------------------------------
  // Diagnostics & Debugging
  // -------------------------------------------------------------------------
  "lldb.suppressUpdateNotifications": true,
  // -------------------------------------------------------------------------
  // Extensions - Code Runner
  // -------------------------------------------------------------------------
  "code-runner.clearPreviousOutput": true,
  "code-runner.runInTerminal": true,
  // -------------------------------------------------------------------------
  // New additions (Unsorted)
  // -------------------------------------------------------------------------
  "workbench.statusBar.visible": false,
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "security.promptForLocalFileProtocolHandling": false,
  "editor.accessibilitySupport": "on",
  "makefile.configureOnOpen": true,
  "C_Cpp.intelliSenseEngine": "disabled",
  "accessibility.signalOptions.volume": 0,
  "jdk.telemetry.enabled": false,
  "editor.lineNumbers": "relative",
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "editor.inlayHints.enabled": "off",
  "latex-workshop.formatting.latex": "latexindent",
  // "latex-workshop.formatting.latex": "none",
  "latex-workshop.formatting.latexindent.path": "/Library/TeX/texbin/latexindent",
  "editor.wordWrap": "on",
  "editor.cursorSurroundingLines": 7,
  "editor.cursorSurroundingLinesStyle": "all",
  "editor.tabSize": 8,
  "vscode-neovim.compositeKeys": {},
}